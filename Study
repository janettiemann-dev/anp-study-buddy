// ===== FILE: src/components/LandingPage.js =====
import React from "react";
import { Brain } from "lucide-react";

export default function LandingPage({onEnter}){
  return (
    <div className="landing-container">
      <div className="landing-card">
        <Brain className="landing-icon" />
        <h1>A&P Study Buddy</h1>
        <p>Your AI‚Äëpowered companion for learning anatomy & physiology.</p>
        <button className="landing-button" onClick={onEnter}>Start Learning</button>
      </div>
    </div>
  );
}

